
pipeline {
    agent any
    
    environment {
        
        IMAGE_NAME = 'chandanbr/bigsnake10'
		
    }

    stages {

        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/brchandan23/FlaskDockerSwarm.git'
            }
        }

        stage('Docker Build') {
            steps {
                
                script {
                    dockerImage = docker.build("${IMAGE_NAME}:latest")
                }
                
            }
        }

        stage('Docker Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub') {
                        dockerImage.push('latest')
                    }
                }
            }
        }
    }
    post {
		success {
			echo "Pipeline Successful"
		}
		failure {
			echo "Pipeline Failure"
		}
		always {
			echo "Cleaning workspace"
			deleteDir()
		}
	}

}
